@model StudentScoreManagementMVC.Models.Student
@{
    ViewBag.Title = "Signup";
}

@using (Html.BeginForm("Signup", "Default", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    <div class="form-group row">
        @Html.LabelFor(model => model.Number, htmlAttributes: new { @class = "control-label col-md-4 text-align-right" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.Number, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-4 text-align-right" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-4 text-align-right" })
        <div class="col-md-8">
            @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
        </div>
    </div>


    <div class="form-group row">
        <div class="col-md-offset-4 col-md-8">
            <input type="submit" value="Sign Up" class="btn btn-info" />
        </div>
    </div>

}



